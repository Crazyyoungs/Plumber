<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<Script file="LegionRemix_Core.lua"/>
	<Script file="LegionRemix_Test.lua"/>
	<Script file="LegionRemix_Macro.lua"/>
	<Script file="LegionRemix_UI.lua"/>


	<Frame name="PlumberRemixArtifactUITemplate" hidden="true" virtual="true">
		<Size x="32" y="160"/>
	</Frame>

	<Button name="PlumberLegionRemixThreeArrowsTemplate" virtual="true">
		<Size x="24" y="24"/>
		<Layers>
			<Layer level="OVERLAY">
				<Texture parentKey="Border">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Button>

	<Button name="PlumberLegionRemixNodeTemplate" virtual="true">
		<Size x="40" y="40"/>
		<Layers>
			<Layer level="OVERLAY" textureSubLevel="5">
				<FontString parentKey="RankText" inherits="SystemFont16_Shadow_ThickOutline">
					<Anchors>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent" relativePoint="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="-1">
				<Texture parentKey="Border" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Size x="64" y="64"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="0">
				<Texture parentKey="GreenGlow" alphaMode="ADD" hidden="true">
					<Size x="80" y="80"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
					<Animations>
						<AnimationGroup parentKey="Anim" looping="REPEAT" setToFinalAlpha="true">
							<Alpha fromAlpha="0" toAlpha="1" duration="0.25" order="1" smoothing="OUT"/>
							<Alpha fromAlpha="1" toAlpha="0" duration="0.75" order="2" smoothing="IN"/>
						</AnimationGroup>
					</Animations>
					<Scripts>
						<OnShow>
							self.Anim:Play();
						</OnShow>
						<OnHide>
							self.Anim:Stop();
						</OnHide>
					</Scripts>
				</Texture>

				<Texture parentKey="Sheen" alphaMode="ADD" texelSnappingBias="0.0" snapToPixelGrid="false" hidden="true">
					<Size x="92" y="92"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>

				<MaskTexture parentKey="SheenMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE" hidden="true">
					<Size x="80" y="80"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Sheen"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
			<Layer level="ARTWORK">
				<Texture parentKey="Icon">
					<Size x="38" y="38"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="IconMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Size x="38" y="38"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="Icon"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup parentKey="AnimSheen">
				<Alpha fromAlpha="0" toAlpha="1" duration="0.05" order="1" childKey="Sheen"/>
				<Alpha fromAlpha="1" toAlpha="0" duration="0.5" startDelay="1.5" order="1" childKey="Sheen"/>
				<Scale scaleX="8" scaleY="8" duration="1.5" order="1" smoothing="IN" childKey="SheenMask"/>
			</AnimationGroup>
		</Animations>
	</Button>

	<Frame name="PlumberLegionRemixTooltipTemplate" virtual="true">
		<Size x="256" y="256"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="Desc" inherits="GameTooltipText" justifyH="LEFT" justifyV="MIDDLE" spacing="2">
					<Size x="240"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="8" y="-8"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="BackgroundFrame" setAllPoints="true" useParentLevel="true">
				<Size x="256" y="256"/>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Texture" setAllPoints="true" file="Interface/AddOns/Plumber/Art/Timerunning/TooltipBackground.png" alpha="0.8">
							<TextureSliceMode mode="Tiled"/>
							<TextureSliceMargins left="32" right="32" top="32" bottom="60"/>
						</Texture>
					</Layer>
				</Layers>
			</Frame>
		</Frames>
	</Frame>

	<Button name="PlumberLegionRemixCardTemplate" enableMouse="true" enableMouseMotion="true" virtual="true">
		<Size x="732" y="108"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Size x="768" y="160"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="1">
				<Texture parentKey="ActivateFX" texelSnappingBias="0.0" snapToPixelGrid="false" alpha="0" hidden="true">
					<Size x="768" y="160"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Background" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="ActivateFXMask" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Size x="64" y="64"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent" relativePoint="LEFT" x="104"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="ActivateFX"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
			<Layer level="BACKGROUND" textureSubLevel="5">
				<Texture parentKey="Div" texelSnappingBias="0.0" snapToPixelGrid="false">
					<Size x="32" y="96"/>
					<Anchors>
						<Anchor point="CENTER"/>
					</Anchors>
				</Texture>
				<Texture parentKey="EdgeGlow1">
					<Size x="1024" y="1024"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent" relativePoint="TOPLEFT" x="80" y="64"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="EdgeMask1" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Size x="768" y="160"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Background" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="EdgeGlow1"/>
					</MaskedTextures>
				</MaskTexture>
				<Texture parentKey="EdgeGlow2">
					<Size x="1024" y="1024"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent" relativePoint="TOP" x="0" y="64"/>
					</Anchors>
				</Texture>
				<MaskTexture parentKey="EdgeMask2" hWrapMode="CLAMPTOBLACKADDITIVE" vWrapMode="CLAMPTOBLACKADDITIVE">
					<Size x="768" y="160"/>
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Background" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
					<MaskedTextures>
						<MaskedTexture childKey="EdgeGlow2"/>
					</MaskedTextures>
				</MaskTexture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Title" inherits="ObjectiveTrackerHeaderFont" justifyH="CENTER" mixin="AutoScalingFontStringMixin" maxLines="1">
					<Size x="176"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent" relativePoint="LEFT" x="104" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="Subtitle" inherits="GameFontNormal" justifyH="CENTER">
					<Anchors>
						<Anchor point="TOP" relativeKey="$parent" relativePoint="LEFT" x="104" y="-4"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY" textureSubLevel="5">
				<Texture parentKey="HoverHighlight" alphaMode="ADD" hidden="true">
					<Size x="512" y="160"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Background" relativePoint="LEFT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Animations>
			<AnimationGroup parentKey="AnimEdge" looping="REPEAT">
				<Rotation degrees="360" duration="30" order="1" childKey="EdgeGlow1"/>
				<Rotation degrees="360" duration="30" order="1" childKey="EdgeGlow2"/>
			</AnimationGroup>
			<AnimationGroup parentKey="AnimActivateFX" setToFinalAlpha="true">
				<Alpha fromAlpha="0" toAlpha="1" duration="0.05" order="1" childKey="ActivateFX"/>
				<Alpha fromAlpha="1" toAlpha="0" duration="0.5" startDelay="1.5" order="1" childKey="ActivateFX"/>
				<Scale scaleX="28" scaleY="28" duration="1.5" order="1" smoothing="IN" childKey="ActivateFXMask"/>
			</AnimationGroup>
		</Animations>
	</Button>
</Ui>